@page
@model LoginModel

@{
    ViewData["Title"] = "Log in";
}
<style>
    .login-div {
        margin-top: 12px;
    }

    .asp-inputfield {
        padding: 14px;
    }

    .button-primair {
        color: "#000814";
        background-color: #FFC300;
    }
</style>

<div style="box-shadow: 2px 2px 5px #AAAAAA; border: 1px solid #BFBFBF; padding: 32px">
    <h1 style="text-align: center">@ViewData["Title"]</h1>
    <section>
        <form id="account" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="login-div">
                <input asp-for="Input.Email" class="asp-inputfield form-control" autocomplete="username" aria-required="true" placeholder="Email" />
                @* <label asp-for="Input.Email" class="form-label">Email</label> *@
                <span asp-validation-for="Input.Email" class="text-danger"></span>
            </div>
            <div class="login-div">
                <input asp-for="Input.Password" class="asp-inputfield form-control" autocomplete="current-password" aria-required="true" placeholder="Wachtwoord" />
                @* <label asp-for="Input.Password" class="form-label">Wachtwoord</label> *@
                <span asp-validation-for="Input.Password" class="text-danger"></span>
            </div>
            <div class="login-div">
                <button id="login-submit" type="submit" class="w-100 btn btn-lg button-primair">Inloggen</button>
            </div>
            <div>
                <div style="display: flex; justify-content: space-between">
                    <div class="checkbox">
                        <label asp-for="Input.RememberMe" class="form-label">
                            <input class="form-check-input" asp-for="Input.RememberMe" />
                            Ingelogd blijven
                        </label>
                    </div>
                    <p>
                        <a id="forgot-password" asp-page="./ForgotPassword">Wachtwoord vergeten</a>
                    </p>
                </div>
                <div style="text-align: center">
                    <p>
                        Nog geen account?
                        <a asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl">Registreren</a>
                    </p>
                    <p>
                        <a id="resend-confirmation" asp-page="./ResendEmailConfirmation">Email bevestinging opnieuw verzenden</a>
                    </p>
                </div>
            </div>
        </form>
    </section>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
